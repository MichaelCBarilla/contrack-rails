<h1>Contracts</h1>

<%= link_to 'New Contract', new_contract_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rate</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.title %></td>
        <td><%= contract.description %></td>
        <td><%= contract.formatted_rate %></td>
        <td><%= link_to 'Show', contract %></td>
      </tr>
    <% end %>
  </tbody>
</table>
